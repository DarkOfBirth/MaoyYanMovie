<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="160dp"
              android:layout_height="310dp">
    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/ll_test"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/movie_find_all_festival_name"
            android:layout_gravity="center"
            android:text="威尼斯电影节"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text=" >"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/rv_test"
        android:layout_below="@id/ll_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_test"
            android:layout_centerVertical="true"
            android:background="#F2F2F2"
            android:layout_width="65dp"
            android:layout_height="2dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/movie_find_all_date"
            android:layout_toRightOf="@id/img_test"
            android:layout_centerVertical="true"
            android:text="08-31"
            android:layout_width="40dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_toRightOf="@id/movie_find_all_date"
            android:layout_centerVertical="true"
            android:background="#F2F2F2"
            android:layout_width="65dp"
            android:layout_height="2dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/rv_test2"
        android:layout_below="@id/rv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@mipmap/icon"
            android:scaleType="fitXY"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/movie_find_all_img"/>
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/movie_find_all_prize_name"
            android:text="新浪潮奖"
            android:textColor="#fff"
            android:background="#7498fa"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/movie_find_all_movie_name"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rv_test2"
        android:text="离开的女人"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>