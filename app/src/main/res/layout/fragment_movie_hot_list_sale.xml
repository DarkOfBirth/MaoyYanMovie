<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:layout_marginTop="5dp"
    android:id="@+id/main_movie_hot_list_ll">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="75dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/main_movie_hot_list_sale_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/main_movie_hot_list_sale_play_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main_movie_hot_list_play"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/main_movie_hot_list_sale_nm_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我不是潘金莲"
                    android:textColor="#000000"
                    android:textSize="15sp"/>
                <ImageView
                    android:id="@+id/main_movie_hot_list_sale_ver_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="观众"/>
                        <TextView
                            android:id="@+id/main_movie_hot_list_sale_mk_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="7.9"
                            android:textSize="18sp"
                            android:textColor="#fca500"/>
                        <LinearLayout
                            android:id="@+id/main_movie_hot_list_sale_pro_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="专业"/>
                            <TextView
                                android:id="@+id/main_movie_hot_list_sale_pro_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="7.3"
                                android:textSize="18sp"
                                android:textColor="#fca500"/>
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/main_movie_hot_list_sale_scm_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="神奇动物城，法师显超能"/>
                    <TextView
                        android:id="@+id/main_movie_hot_list_sale_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="今天16家影院放映18场"/>
                </LinearLayout>
                <Button
                    android:id="@+id/main_movie_hot_list_sale_wait_btn"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:text="购票"
                    android:background="#000000"
                    android:textColor="#ffffff"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_movie_hot_list_sale_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="40dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#ebebeb"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="专题"
                android:textSize="12sp"
                android:textColor="#fca425"/>
            <TextView
                android:id="@+id/main_movie_hot_list_sale_specialism_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="神奇动物魔法世界最全科普手册"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="#ebebeb"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="资讯"
                android:textSize="12sp"
                android:textColor="#fca425"/>
            <TextView
                android:id="@+id/main_movie_hot_list_sale_information_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六大看点正确开启魔法大门"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>