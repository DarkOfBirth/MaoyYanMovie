<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="5dp"
              android:layout_marginTop="15dp"
              android:layout_width="match_parent"
              android:layout_height="200dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/movie_find_center_board_name_one"
                    android:textSize="18sp"
                    android:text="热映口碑"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/movie_find_center_movie_name_one"
                    android:textSize="16sp"
                    android:text="海洋奇缘"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/movie_find_center_movie_img_one"
                    android:layout_width="50dp"
                    android:layout_height="75dp"/>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/movie_find_center_movie_img_one_before"
                    android:layout_width="80dp"
                    android:layout_height="85dp"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/movie_find_center_board_name_two"
                    android:textSize="18sp"
                    android:text="热映口碑"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/movie_find_center_movie_name_two"
                    android:textSize="16sp"
                    android:text="海洋奇缘"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/movie_find_center_movie_img_two"
                    android:layout_width="50dp"
                    android:layout_height="75dp"/>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/movie_find_center_movie_img_two_before"
                    android:layout_width="80dp"
                    android:layout_height="85dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_weight="0.01"
        android:layout_width="0dp"
        android:background="#F2F2F2"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/movie_find_center_board_name_three"
                    android:textSize="18sp"
                    android:text="热映口碑"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/movie_find_center_movie_name_three"
                    android:textSize="16sp"
                    android:text="海洋奇缘"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/movie_find_center_movie_img_three"
                    android:layout_width="50dp"
                    android:layout_height="75dp"/>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/movie_find_center_movie_img_three_before"
                    android:layout_width="80dp"
                    android:layout_height="85dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1.1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/movie_find_center_board_name_four"
                    android:textSize="18sp"
                    android:text="热映口碑"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/movie_find_center_movie_name_four"
                    android:textSize="16sp"
                    android:text="海洋奇缘"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/movie_find_center_movie_img_four"
                    android:layout_width="50dp"
                    android:layout_height="75dp"/>

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_marginRight="25dp"
                    android:id="@+id/movie_find_center_movie_img_four_before"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>