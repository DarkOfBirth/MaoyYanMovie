<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/find_four_item_rv"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="vertical"
                android:padding="5dp">

    <TextView
        android:id="@+id/find_four_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="123214325"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/find_four_title_tv">

        <ImageView
            android:id="@+id/find_four_images_one_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/find_four_images_one_img"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/find_four_images_two_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/icon"/>

            <ImageView
                android:id="@+id/find_four_images_three_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/icon"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/find_four_nick_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11111"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/eyes"/>

                <TextView
                    android:id="@+id/find_four_view_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11111"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/message"/>

                <TextView
                    android:id="@+id/find_four_comment_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11111"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>